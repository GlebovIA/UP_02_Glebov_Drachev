<Border x:Class="UP_02_Glebov_Drachev.Views.Controls.TabElement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="50"
        CornerRadius="12"
        Background="White"
        Margin="0,5"
        Cursor="Hand">
    <Border.Effect>
        <DropShadowEffect Color="Gray" BlurRadius="6" ShadowDepth="1" Opacity="0.2"/>
    </Border.Effect>
    <Grid>
        <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Padding="15,0">
            <TextBlock x:Name="Title" FontSize="16" FontFamily="Segoe UI" Foreground="#FF0060AC"/>
        </Label>
    </Grid>
</Border>