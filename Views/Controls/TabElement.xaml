<Border x:Class="UP_02_Glebov_Drachev.Views.Controls.TabElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="40"
        CornerRadius="10"
        HorizontalAlignment="Stretch"
        MouseDown="ShowTabContent">
    <Grid>
        <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Left">
            <TextBlock x:Name="Title" FontSize="16" FontFamily="Arial" Foreground="#FF0060AC"/>
        </Label>
    </Grid>
</Border>
