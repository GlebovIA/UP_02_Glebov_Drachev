<Border x:Class="UP_02_Glebov_Drachev.Views.Controls.PlaceholderedPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 CornerRadius="10"
    BorderThickness="2"
    BorderBrush="#ffc1c1c1"
    Height="40">
    <Grid>
        <TextBlock VerticalAlignment="Center"  x:Name="Placeholder" FontSize="16" FontFamily="Arial" Foreground="Gray" Margin="15, 0, 0, 0"/>
        <TextBox x:Name="Password"
             Height="40" 
             Padding="10" 
             FontSize="16"
             FontFamily="Arial"
             Background="Transparent" 
             BorderThickness="0" 
             BorderBrush="Transparent"
             Foreground="Black"
             VerticalAlignment="Center"/>
    </Grid>
</Border>
