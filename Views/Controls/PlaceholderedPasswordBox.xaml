<Border x:Class="UP_02_Glebov_Drachev.Views.Controls.PlaceholderedPasswordBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        CornerRadius="12"
        BorderThickness="2"
        BorderBrush="#FFD9D9D9"
        Height="50"
        Background="White">
    <Border.Effect>
        <DropShadowEffect Color="Gray" BlurRadius="6" ShadowDepth="1" Opacity="0.2"/>
    </Border.Effect>
    <Grid>
        <TextBlock x:Name="Placeholder" VerticalAlignment="Center" FontSize="16" FontFamily="Segoe UI" Foreground="#FF9EA1A2" Margin="15,0,0,0"/>
        <TextBox x:Name="Password" Padding="15,0,15,0" FontSize="16" FontFamily="Segoe UI" Background="Transparent" BorderThickness="0" Foreground="Black" VerticalAlignment="Center"/>
    </Grid>
</Border>