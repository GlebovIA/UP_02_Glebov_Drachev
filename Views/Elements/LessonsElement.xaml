<UserControl x:Class="UP_02_Glebov_Drachev.Views.Elements.LessonsElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:phTBx="clr-namespace:UP_02_Glebov_Drachev.Views.Controls">
    <Border CornerRadius="12" Background="White" Margin="10" Padding="15" BorderThickness="1" BorderBrush="#FFD9D9D9">
        <Border.Effect>
            <DropShadowEffect Color="Gray" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Дата и время:" Foreground="#FF0060AC" FontSize="16" FontFamily="Segoe UI" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Time, StringFormat=dd-MM-yyyy HH:mm}" Foreground="#FF9EA1A2" FontSize="16" FontFamily="Segoe UI" VerticalAlignment="Center" Margin="10,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Группа:" Foreground="#FF0060AC" FontSize="16" FontFamily="Segoe UI" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding StudGroup.Name}" Foreground="#FF9EA1A2" FontSize="16" FontFamily="Segoe UI" VerticalAlignment="Center" Margin="10,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Дисциплина:" Foreground="#FF0060AC" FontSize="16" FontFamily="Segoe UI" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding DisciplineProgram.Discipline.Name}" Foreground="#FF9EA1A2" FontSize="16" FontFamily="Segoe UI" VerticalAlignment="Center" Margin="10,0"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                <phTBx:BlueRoundButton Text="Изменить" MouseLeftButtonDown="RedacClick" Margin="0,0,0,15"/>
                <phTBx:RoundButton Text="Удалить" MouseLeftButtonDown="DeleteClick"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>