<UserControl x:Class="UP_02_Glebov_Drachev.Views.Elements.TeachersLoadElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UP_02_Glebov_Drachev.Views.Elements">
    <Border CornerRadius="5" Background="White" Margin="5" Padding="10">
        <StackPanel>
            <Label Content="Преподаватель:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding Teacher}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>

            <Label Content="Дисциплина:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding Discipline}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>

            <Label Content="Группа:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding Group}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>

            <Label Content="Часы лекций:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding LectureHours}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>

            <Label Content="Часы практик:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding PracticeHours}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>

            <Label Content="Часы консультаций:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding ConsultationHours}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>

            <Label Content="Часы курсового проекта:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding CourceProjectHours}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>

            <Label Content="Часы экзамена:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding ExamHours}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>
        </StackPanel>
    </Border>
</UserControl>