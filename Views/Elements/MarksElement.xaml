<UserControl x:Class="UP_02_Glebov_Drachev.Views.Elements.MarksElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border CornerRadius="5" Background="White" Margin="5" Padding="10"
            xmlns:local="clr-namespace:UP_02_Glebov_Drachev.Views.Elements">
        <StackPanel>
            <Label Content="Дата:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding Date}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>

            <Label Content="Оценка:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding Mark}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>

            <Label Content="Дисциплина:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding Discipline}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>

            <Label Content="Преподаватель:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding Teacher}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>

            <Label Content="Студент:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding Student}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>

            <Label Content="Описание:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding Description}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>
        </StackPanel>
    </Border>
</UserControl>
