<UserControl x:Class="UP_02_Glebov_Drachev.Views.Elements.TeachersElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UP_02_Glebov_Drachev.Views.Elements">
    <Border CornerRadius="5" Background="White" Margin="5" Padding="10">
        <StackPanel>
            <Label Content="Фамилия:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding Surname}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>

            <Label Content="Имя:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding Name}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>

            <Label Content="Отчество:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding Lastname}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>

            <Label Content="Логин:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding Login}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>

            <Label Content="Пароль:" Foreground="#FF0060AC" FontSize="14" FontFamily="Corbel"/>
            <TextBlock Text="{Binding Password}" Foreground="#FF9EA1A2" FontSize="14" FontFamily="Corbel"/>
        </StackPanel>
    </Border>
</UserControl>