<Page x:Class="UP_02_Glebov_Drachev.Views.Pages.EntityPages.EditPages.LessonTypesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:control="clr-namespace:UP_02_Glebov_Drachev.Views.Controls"
      Title="Типы занятий">
    <Grid>
        <StackPanel>
            <Label Content="Тип занятия" Foreground="#FF0060AC" FontSize="16"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Название типа:" Foreground="#FF0060AC" FontSize="14"/>
                <TextBox Text="{Binding TypeName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="#FF9EA1A2" FontSize="14" Margin="5,0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <control:BlueRoundButton Text="Принять" MouseLeftButtonDown="Acept"/>
            <control:RoundButton Text="Отмена" MouseLeftButtonDown="Cancel" Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>