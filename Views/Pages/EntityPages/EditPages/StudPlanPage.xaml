<Page x:Class="UP_02_Glebov_Drachev.Views.Pages.EntityPages.EditPages.StudPlanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:control="clr-namespace:UP_02_Glebov_Drachev.Views.Controls"
      Title="Учебный план">
    <Grid>
        <StackPanel>
            <Label Content="Учебный план" Foreground="#FF0060AC" FontSize="16"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Нагрузка преподавателя:" Foreground="#FF0060AC" FontSize="14"/>
                <ComboBox x:Name="TeachersLoads" DisplayMemberPath="Id" SelectedValuePath="Id" SelectedValue="{Binding TeachersLoadId}" Foreground="#FF9EA1A2" FontSize="14" Margin="5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Прошедшие часы лекций:" Foreground="#FF0060AC" FontSize="14"/>
                <TextBox Text="{Binding PastLectureHours, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="#FF9EA1A2" FontSize="14" Margin="5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Прошедшие часы практики:" Foreground="#FF0060AC" FontSize="14"/>
                <TextBox Text="{Binding PastPracticeHours, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="#FF9EA1A2" FontSize="14" Margin="5,0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <control:BlueRoundButton Text="Принять" MouseLeftButtonDown="Acept"/>
            <control:RoundButton Text="Отмена" MouseLeftButtonDown="Cancel" Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>