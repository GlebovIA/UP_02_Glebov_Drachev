<Page x:Class="UP_02_Glebov_Drachev.Views.Pages.EntityPages.EditPages.TeachersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:control="clr-namespace:UP_02_Glebov_Drachev.Views.Controls"
      Title="Преподаватели">
    <Grid>
        <StackPanel>
            <Label Content="Преподаватель" Foreground="#FF0060AC" FontSize="16"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Фамилия:" Foreground="#FF0060AC" FontSize="14"/>
                <TextBox Text="{Binding Surname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="#FF9EA1A2" FontSize="14" Margin="5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Имя:" Foreground="#FF0060AC" FontSize="14"/>
                <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="#FF9EA1A2" FontSize="14" Margin="5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Отчество:" Foreground="#FF0060AC" FontSize="14"/>
                <TextBox Text="{Binding Lastname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="#FF9EA1A2" FontSize="14" Margin="5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Пользователь:" Foreground="#FF0060AC" FontSize="14"/>
                <ComboBox x:Name="Users" DisplayMemberPath="Login" SelectedValuePath="Id" SelectedValue="{Binding UserId}" Foreground="#FF9EA1A2" FontSize="14" Margin="5,0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <control:BlueRoundButton Text="Принять" MouseLeftButtonDown="Acept"/>
            <control:RoundButton Text="Отмена" MouseLeftButtonDown="Cancel" Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>