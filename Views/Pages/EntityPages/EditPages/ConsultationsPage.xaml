<Page x:Class="UP_02_Glebov_Drachev.Views.Pages.EntityPages.EditPages.ConsultationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:control="clr-namespace:UP_02_Glebov_Drachev.Views.Controls"
      Title="Консультации">
    <Grid Background="#FFF1F1F1">
        <Border Background="White" CornerRadius="12" Margin="20" Padding="20" BorderThickness="1" BorderBrush="#FFD9D9D9" HorizontalAlignment="Stretch">
            <Border.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Grid.Row="0" Text="Консультация" FontSize="24" FontFamily="Segoe UI" FontWeight="Bold" Foreground="#FF0060AC" Margin="0,0,0,20"/>

                <!-- Поля ввода -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Дисциплина:" Foreground="#FF0060AC" FontSize="16" FontFamily="Segoe UI" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" x:Name="DisciplinesComboBox" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding DisciplineId}" Foreground="#FF9EA1A2" FontSize="16" FontFamily="Segoe UI" VerticalAlignment="Center" Margin="0,0,0,15" HorizontalAlignment="Stretch"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Дата:" Foreground="#FF0060AC" FontSize="16" FontFamily="Segoe UI" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <DatePicker Grid.Row="1" Grid.Column="1" SelectedDate="{Binding Date}" Foreground="#FF9EA1A2" FontSize="16" FontFamily="Segoe UI" VerticalAlignment="Center" Margin="0,0,0,15" HorizontalAlignment="Stretch"/>
                </Grid>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <control:BlueRoundButton Text="Принять" MouseLeftButtonDown="Accept" Margin="0,0,15,0"/>
                    <control:RoundButton Text="Отмена" MouseLeftButtonDown="Cancel"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>