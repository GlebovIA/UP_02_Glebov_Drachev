<Page x:Class="UP_02_Glebov_Drachev.Views.Pages.EntityPages.EditPages.TeachersLoadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:control="clr-namespace:UP_02_Glebov_Drachev.Views.Controls"
      Title="Нагрузка преподавателей">
    <Grid>
        <StackPanel>
            <Label Content="Нагрузка преподавателя" Foreground="#FF0060AC" FontSize="16"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Преподаватель:" Foreground="#FF0060AC" FontSize="14"/>
                <ComboBox x:Name="Teachers" DisplayMemberPath="FullName" SelectedValuePath="Id" SelectedValue="{Binding TeacherId}" Foreground="#FF9EA1A2" FontSize="14" Margin="5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Дисциплина:" Foreground="#FF0060AC" FontSize="14"/>
                <ComboBox x:Name="Disciplines" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding DisciplineId}" Foreground="#FF9EA1A2" FontSize="14" Margin="5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Группа:" Foreground="#FF0060AC" FontSize="14"/>
                <ComboBox x:Name="StudGroups" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding StudGroupId}" Foreground="#FF9EA1A2" FontSize="14" Margin="5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Часы лекций:" Foreground="#FF0060AC" FontSize="14"/>
                <TextBox Text="{Binding LectureHours, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="#FF9EA1A2" FontSize="14" Margin="5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Часы практики:" Foreground="#FF0060AC" FontSize="14"/>
                <TextBox Text="{Binding PracticeHours, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="#FF9EA1A2" FontSize="14" Margin="5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Часы экзаменов:" Foreground="#FF0060AC" FontSize="14"/>
                <TextBox Text="{Binding ExamHours, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="#FF9EA1A2" FontSize="14" Margin="5,0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <control:BlueRoundButton Text="Принять" MouseLeftButtonDown="Acept"/>
            <control:RoundButton Text="Отмена" MouseLeftButtonDown="Cancel" Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>