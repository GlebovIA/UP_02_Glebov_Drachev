<Page x:Class="UP_02_Glebov_Drachev.Views.Pages.RetakeReferralPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RetakeReferralPage">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Генерация направления на пересдачу" FontSize="20" Margin="0,0,0,20"/>
            <TextBlock Text="Выберите студента:" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="StudentComboBox" DisplayMemberPath="FullName" Margin="0,0,0,10"/>
            <TextBlock Text="Выберите дисциплину:" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="DisciplineComboBox" DisplayMemberPath="Name" Margin="0,0,0,10"/>
            <Button Content="Сгенерировать" Click="GenerateButton_Click" Width="150" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Page>