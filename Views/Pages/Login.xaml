<Page x:Class="UP_02_Glebov_Drachev.Views.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP_02_Glebov_Drachev.Views.Pages"
      xmlns:phTBx="clr-namespace:UP_02_Glebov_Drachev.Views.Controls"
      mc:Ignorable="d" 
      Title="LoginPage"
      Background="#FF0060AC">

    <Grid>
        <Border Background="White" 
                CornerRadius="20" 
                Width="350" 
                Height="300" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                BorderBrush="#ffc1c1c1"
                BorderThickness="4">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Заголовок -->
                <TextBlock Text="Авторизация" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Foreground="#FF0060AC"
                           Margin="0,0,0,20"/>

                <!-- Поле для ввода логина -->

                <phTBx:PlaceholderedTextBox x:Name="LoginTextBox" 
                                Width="300" 
                                PlaceHolder="Логин"
                                            Margin="0, 0, 0, 10"/>

                <!-- Поле для ввода пароля -->
                <phTBx:PlaceholderedPasswordBox x:Name="PasswordTextBox" 
                                  Width="300" 
                                  Height="40" 
                                  PlaceHolder="Пароль"
                                                Margin="0, 0, 0, 10"/>

                <!-- Кнопки входа и регистрации -->
                <Grid>
                    <phTBx:RoundButton Text="Вход" OnClick="SignInClick" HorizontalAlignment="Left"/>
                    <phTBx:RoundButton Text="Регистрация" OnClick="RegInClick" HorizontalAlignment="Right"/>
                </Grid>

                <!-- Ссылка "Забыли пароль?" -->
                <TextBlock Text="Забыли пароль?" 
                           FontSize="16"  
                           FontFamily="Arial"
                           HorizontalAlignment="Center" 
                           Foreground="#FF0060AC"
                           MouseDown="ForgotPassword"
                           Margin="0, 10, 0, 0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>