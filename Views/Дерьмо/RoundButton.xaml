<Border x:Class="UP_02_Glebov_Drachev.Views.Дерьмо.RoundButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        CornerRadius="10"
        Background="#FFE41613"
        Width="150"
        Height="40"
        Cursor="Hand">
    <Button x:Name="BackButton"
            Content="{Binding Text, RelativeSource={RelativeSource AncestorType=Border}}"
            FontSize="16"
            Background="Transparent"
            Foreground="White"
            BorderBrush="Transparent"
            Cursor="Hand"
            Padding="0"
            Click="Click"
            MouseEnter="MouseEnterHandler"
            MouseLeave="MouseLeaveHandler"/>
</Border>